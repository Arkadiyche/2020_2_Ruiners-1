<div class="profile_main">
    <img src="{{domain}}/user/avatar/{{id}}?{{random}}" width="400" height="400" class="profile__default_margin profile__image">
    <span class="profile__default_margin profile_login">{{Login}}</span>
    <div class="profile__default_margin profile_settings">
        {{#if isAuth}}
            {{{button}}}
        {{/if}}
    </div>
</div>

{{#if isProfile}}
    <div class="profile_nav">
        <div class="profile_nav_links">
            <a href="/default" class="profile_nav_links_aBig" id="play">Плэйлисты</a>
            <a href="/default" class="profile_nav_links_a" id="subscribe">Подписки</a>
            <a href="/default" class="profile_nav_links_a" id="lenta">Лента</a>
        </div>
        <hr class="profile_nav_line">
    </div>
{{/if}}
