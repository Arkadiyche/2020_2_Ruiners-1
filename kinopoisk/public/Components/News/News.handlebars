{{#each news}}
    {{#if this.is_rating}}
            <div class="{{../styles.news_width}}">
                <div class="{{../styles.news_container}}">
                    <img src="{{this.domain}}/api/user/avatar/{{this.user_id}}" width="200" height="200" class="{{../styles.news__default_margin}} {{../styles.news__image}}">
                    <div class="{{../styles.news_container_column}}">
                        <a class="{{../styles.news_login}}" href="people/{{this.user_id}}">{{this.user_login}}</a>
                        <div class="news_container_info">
                            <span class="{{../styles.news_info}}">поставил(-а) оценку</span> <span class="{{../styles.news_rating}}"> "{{this.body}}/10" </span> <span class="{{../styles.news_info}}">к фильму</span>
                            <a class="{{../styles.news_login}}" href="film/{{this.film_id}}">"{{this.film_title}}"</a>
                        </div>
                        <span class="{{../styles.news_dateTime}}">{{this.dateTime}}</span>
                    </div>
                </div>
                <hr class="{{../styles.news_object_line}}">
            </div>
    {{/if}}


    {{#if this.is_review}}
        <div class="{{../styles.news_width}}">
            <div class="{{../styles.news_container}}">
                <img src="{{this.domain}}/api/user/avatar/{{this.user_id}}" width="200" height="200" class="{{../styles.news__default_margin}} {{../styles.news__image}}">
                <div class="{{../styles.news_container_column}}">
                    <a class="{{../styles.news_login}}" href="people/{{this.user_id}}">{{this.user_login}}</a>
                    <div class="{{../styles.news_container_info}}">
                        <span class="{{../styles.news_info}}">оставил(-а) комментарий</span><span class="{{../styles.news_info}}"> к фильму</span>
                        <a class="{{../styles.news_login}}" href="film/{{this.film_id}}">"{{this.film_title}}"</a>
                    </div>
                    <div class="{{../styles.news_container_comment}}">
                        <div class="{{../this.styles.news_comment}}">
                            <span class="{{../styles.news_comment_body}}">{{this.body}}</span>
                            <hr class="{{../styles.news__line}}">
                            <span class="{{../styles.news_dateTime}}">{{this.dateTime}}</span>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="{{../styles.news_object_line}}">
        </div>
    {{/if}}
{{/each}}
