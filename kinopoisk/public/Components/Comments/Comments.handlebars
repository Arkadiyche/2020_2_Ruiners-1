<div class="{{styles.comments_place}}">
    {{#if isAuth}}
        <div>
            <h1 class="{{styles.comments__header}}">Ваш комментарий</h1>
            <div class="{{styles.comments__underground}}">
                <form>
                    <textarea name="message" rows="1" class="{{styles.question}}" required="" autocomplete="off" id="msg"></textarea>
                    <label class="{{styles.comment}}" for="msg"><span class="{{styles.comment}}">Напишите комментарий</span></label>
                </form>
                {{{ Button }}}
            </div>
        </div>
    {{/if}}
    {{#if noComments}}
        <h1 class="{{styles.comments__header}}">Нет комментариев</h1>
    {{else}}
        <div>
        <h1 class="{{styles.comments__header}}">Все комментарии</h1>
            {{#each comments}}
                <div class="{{../styles.comments__underground}}">
                    <div class="{{../styles.comment__profile}}">
                        <a class="{{../styles.comment__login}}" href="people/{{this.user_id}}">{{ this.user_login }}</a>
                        <img class="{{../styles.comment__profile__round}}" width="50" height="50" src="{{ this.image }}" alt="">
                    </div>
                    <div class="{{../styles.comment__content}}">
                        {{ this.text_body }}
                    </div>
                    <hr class="{{../styles.comment__line}}">
                    <span class="{{../styles.comment__rate}}">Оценка: {{ this.rate }}/10</span>
                </div>
            {{/each}}
        </div>
    {{/if}}
</div>
<div class="{{styles.invisible_box}}"></div>
